#!/bin/bash

option=$(echo -e "Lock\nSuspend\nLogout\nReboot\nShutdown" | /usr/bin/fuzzel --dmenu --prompt "Power: ")

case "$option" in
    "Lock")
        swaylock -f -C ~/.config/swaylock/config
        ;;
    "Suspend")
        systemctl suspend
        ;;
    "Logout")
        swaymsg exit
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Shutdown")
        systemctl poweroff
        ;;
esac
